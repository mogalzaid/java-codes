package loops;

public class PrintOddNEvenNumbers {

	public static void main(String[] args) {
		int i=100;
		System.out.print("odd");
		System.out.println("even");
		for(i=1;i<=100;i++)
		{
	
			if (i%2==0) 
			
			System.out.println(+i);
		
			if(i%2!=0)
				
				System.out.print( i +";" );
		}
		System.out.println();

}}


