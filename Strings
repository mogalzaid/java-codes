package strings;
import java.util.regex.*;
public class matches {

	public static void main(String[] args)
	{
		Pattern p = Pattern.compile(".s");
		Matcher m = p. matcher("as");
	
		System.out.println(m.matches());
	}

}




#7
package strings;

public class comparisions 
{

	public static void main(String[] args) {
		String s1="hello world";
		String s2="Hello world";
				
				System.out.println(s1.equals(s2));              //equals()
				System.out.println(s1.equalsIgnoreCase(s2));    //equalsIgnoreCase()
        
        String s4=s3.trim();      //trim()
			System.out.println(s4);
			
			String s5= s3.trim().replace("wonderful","harsh");
					System.out.println(s5);            //replace()
	}
}



#8
package strings;

public class comparisions 
{

	public static void main(String[] args) {
		String s1="hello world";
		String s2="Hello world";
		String s3="   its a wonderful day   ";
					System.out.println(s1.equals(s2));              //equals()
				System.out.println(s1.equalsIgnoreCase(s2));    //equalsIgnoreCase()
        
				System.out.println(s1.compareTo(s2));
				System.out.println(s1.compareToIgnoreCase(s2));
        
				System.out.println(s3.startsWith("its"));                       //startsWith()
        
				System.out.println(s3.endsWith("a"));                          //endsWith()
        
			
				
			String s4=s3.trim();                                             //trim()
			System.out.println(s4);
			
			String s5= s3.trim().replace("wonderful","harsh");
					System.out.println(s5);                                  //replace()
	}
}


#11



package strings;

public class Split {

	public static void main(String[] args) {
           String a="splitting words using split";
           String[] arr= a.split("\\s+");
           
           for(String word:arr)
           {
        	   System.out.println(word);
           }
	}

}

