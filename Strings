#2 #3 #4 #5


package strings;

public class Concatenating
{

	public static void main(String[] args) 
  {
		
		String a="Zaid Ur ";
		String b="Rehman";
    String c="Zaid Ur "+"Rehman";
		System.out.println(a+b);
    System.out.println(c);
    System.out.println(a.length());   // length of string
    System.out.println(c.substring(8, 14));  //substring
    System.out.println(c.indexOf("R"));    // indexof
}
}


