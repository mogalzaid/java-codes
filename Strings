package strings;

public class DifferentCases {

	public static void main(String[] args) {
		String a="abcdefg";
		String b="HIJKLMNOP";
		
		
		int i=10;
	String d =String.valueOf(i);
	System.out.println(d);
	//---------------------------------------------------
		System.out.println(a.toUpperCase());
		System.out.println(b.toLowerCase());

	}

}





